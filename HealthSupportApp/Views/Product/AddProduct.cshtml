@using System.Web.UI.WebControls
@model HealthSupportApp.Models.ProductModel.Product

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container" style="margin-top: 40px">
    <div class="row">
        <div class="col-lg-8 col-centered">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("SaveProduct", "Product", FormMethod.Post, new { id = "productForm" }))
                    {
                        @Html.HiddenFor(model => model.ProductId)
                        <div>
                            @Html.LabelFor(model => model.ProductName)
                            @Html.TextBoxFor(model => model.ProductName)
                        </div>
                        <div>
                            @Html.LabelFor(model => model.ProductDescription)
                            @Html.TextAreaFor(model => model.ProductDescription)
                        </div>
                        <div>
                            @Html.LabelFor(model => model.ProductCategory)
                            @Html.TextBoxFor(model => model.ProductCategory)
                        </div>
                        <button type="submit">Submit</button>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<script>
</script>
