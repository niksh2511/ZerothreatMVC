@model HealthSupportApp.Models.DoctorModel.ChangePassword
@{
    Layout = null;
    if (User.IsInRole("Medical"))
    {
        Response.Redirect("~/Medical/Index");
    }
    if (User.IsInRole("User"))
    {
        Response.Redirect("~/User/Index");
    }
    if (User.IsInRole("Doctor"))
    {
        Response.Redirect("~/Doctor/Index");
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Change Password - HSSMI</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="~/Content/Layout/vendor/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="~/Content/Layout/vendor/font-awesome/css/font-awesome.min.css">
    <!-- Fontastic Custom icon font-->
    <link rel="stylesheet" href="~/Content/Layout/css/fontastic.css">
    <!-- Google fonts - Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <!-- jQuery Circle-->
    <link rel="stylesheet" href="~/Content/Layout/css/grasp_mobile_progress_circle-1.0.0.min.css">
    <!-- Custom Scrollbar-->
    <link rel="stylesheet" href="~/Content/Layout/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="~/Content/Layout/css/style.blue.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="~/Content/Layout/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/Content/Layout/img/favicon.ico">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    <style>
        .field-validation-error {
            color: red;
        }

        .input-validation-error {
            border-color: red;
        }

        .table-borderless tr td {
            border: none !important;
        }

        .table-borderless tr th {
            border: none !important;
        }

        .col-centered {
            margin: 0 auto;
            float: none;
        }
    </style>
</head>
<body>
<nav class="navbar" style="padding: 8px">
    <div class="container">
         <a href="@Url.Action("Index", "Home")" style = "font-size: 30px; color: white" class="navbar-brand">
             TreatMaster
         </a>
    </div>
</nav>
<div class="container-fluid bg-light">
    <!-- Statistics Section-->
    <section class="statistics">
        @if (ViewBag.WarningMessage != null)
        {
            <div class="container">
                <div class="row justify-content-center align-content-center">
                    <div class="col-md-8">
                        <div class="alert alert-warning alert-dismissible" style="margin-top: 20px">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>Warning!</strong> @ViewBag.WarningMessage
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="container">
                <div class="row justify-content-center align-content-center">
                    <div class="col-md-8">
                        <div class="alert alert-danger alert-dismissible" style="margin-top: 20px">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>Error!</strong> @ViewBag.ErrorMessage
                        </div>
                    </div>
                </div>
            </div>
        }
            <div class="container-fluid" style="min-height: 80vh;max-width: 600px; margin: 0 auto; padding: 20px 0;position: relative;">
                <div class="row h-100 justify-content-center align-items-center">
                    <div class="col-md-12 ">
                        <div class="card">
                            <div class="card-header">
                                <h4>Change your password</h4>
                            </div>
                            <br />
                            @using (Html.BeginForm("ChangeTemporaryPassword", "Register", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="row">
                                    <div class="col-md-10 col-centered">
                                        <div class="form-group row">
                                            <label class="col-form-label col-md-5">New Password :</label>
                                            <div class="col-md-7">
                                                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", placeholder = "Enter your New Password" })
                                                @Html.ValidationMessageFor(model => model.NewPassword)
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-form-label col-md-5">Confirm New Password :</label>
                                            <div class="col-md-7">
                                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm your New Password" })
                                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                            </div>
                                        </div>
                                        <p class="text-center"><button class="btn btn-success" type="submit"><i class="fa fa-check-square"></i> SAVE</button></p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        <br />
    </section>
</div>
<div class="container-fluid" style="padding: 20px; background: #f2f2f2">
    <div class="row">
        <div class="col-6 col-sm-6">
            <p>HSSMI &copy; @DateTime.Now.Year</p>
        </div>
        <div class="col-6 col-sm-6 text-right">
            <p>Design by <a href="#" class="external">Ihasan Zarif</a></p>
        </div>
    </div>
</div>
<!-- JavaScript files-->
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Content/Layout/vendor/popper.js/umd/popper.min.js"></script>
<script src="~/Content/Layout/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Content/Layout/js/grasp_mobile_progress_circle-1.0.0.min.js"></script>
<script src="~/Content/Layout/vendor/jquery.cookie/jquery.cookie.js"></script>
<script src="~/Content/Layout/vendor/chart.js/Chart.min.js"></script>
<script src="~/Content/Layout/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
<script src="~/Content/Layout/js/charts-home.js"></script>
<!-- Main File-->
<script src="~/Content/Layout/js/front.js"></script>
</body>
</html>

